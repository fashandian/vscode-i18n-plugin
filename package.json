{
	"name": "i18n-plugin",
	"displayName": "i18n-plugin",
	"description": "用来显示翻译的中文",
	"version": "0.0.2-beta.1",
	"publisher": "fashandian",
	"engines": {
		"vscode": "^1.62.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:i18n-plugin.helloWorld",
		"onLanguage:typescriptreact"
	],
	"icon": "static/logo.jpg",
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "i18n-plugin.helloWorld",
				"title": "Hello World"
			}
		],
		"menus": {
			"editor/title": [
				{
					"when": "resourceLangId === typescript",
					"title": "tsHello",
					"command": "i18n-plugin.helloWorld",
					"group": "navigation"
				}
			]
		},
		"languages": [
			{
				"id": "typescriptreact",
				"extensions": [
					".tsx",
					".ts",
					".js",
					".jsx"
				],
				"aliases": [
					"TypeScript React",
					"TypeScript",
					"JavaScript",
					"JavaScript React"
				]
			}
		],
		"configuration": [
			{
				"title": "vscode-i18n-plugin",
				"properties": {
					"vsI18n.locales": {
						"type": "string",
						"default": "/src/locales",
						"markdownDescription": "vscode-i18n-plugin locales file url"
					},
					"matchRegex": {
						"type": "string",
						"default": "",
						"markdownDescription": "Regex match locales id"
					}
				}
			}
		]
	},
	"repository": {
		"url": "https://github.com/fashandian/vscode-i18n-plugin"
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.62.0",
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"eslint": "^8.1.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.3",
		"typescript": "^4.4.4",
		"@vscode/test-electron": "^1.6.2"
	}
}